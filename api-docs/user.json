{
    "apiVersion": "1.0",
    "swagger": "2.0",
    "basePath": "https://inspectionsupport.net/test/rest",
    "resourcePath": "/user",
    "apis": [
        {
            "path": "/user/{id}",
            "description": "Obtain the user with the given ID",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Obtain the user with the given ID",
                    "responseClass": "ResponseUser",
                    "nickname": "user",
                    "parameters": [
                        {
                            "name": "id",
                            "description": "The ID of the user",
                            "paramType": "path",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "username",
                            "description": "A username -or- user access key - for an example use 'bsmith'",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "password",
                            "description": "A password -or- user secret access key - for an example use 'password'",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ]
                },
                {
                    "httpMethod": "POST",
                    "summary": "Validate the username/key and password/secret-key are correct",
                    "responseClass": "void",
                    "nickname": "validate",
                    "parameters": [
                        {
                            "name": "username",
                            "description": "A username -or- user access key - for an example use 'bsmith'",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "password",
                            "description": "A password -or- user secret access key - for an example use 'password'",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {

        "ResponseUser": {
            "properties": {

                "id": {
                    "type": "string",
                    "required": true,
                    "description": "id of user"
                },
                "office": {
                    "type": "string",
                    "required": true,
                    "description": "office of user"
                },
                "firstname": {
                    "type": "string",
                    "required": true,
                    "description": "first name of user"
                },
                "lastname": {
                    "type": "string",
                    "required": true,
                    "description": "last name of user"
                },
                "displayname": {
                    "type": "string",
                    "required": true,
                    "description": "display name of user"
                },
                "emailaddress": {
                    "type": "string",
                    "required": true,
                    "description": "email address of user"
                },
                "address1": {
                    "type": "string",
                    "required": true,
                    "description": "address (first line) of the user"
                },
                "address2": {
                    "type": "string",
                    "required": true,
                    "description": "address (second line) of the user"
                },
                "city": {
                    "type": "string",
                    "required": true,
                    "description": "user's city"
                },
                "state": {
                    "type": "string",
                    "required": true,
                    "description": "user's state"
                },
                "stateabbreviation": {
                    "type": "string",
                    "required": true,
                    "description": "user's state (abbreviation)"
                },
                "zip": {
                    "type": "string",
                    "required": true,
                    "description": "zip/postal code for the user"
                },
                "zip": {
                    "type": "string",
                    "required": true,
                    "description": "zip/postal code for the user"
                },
                "county": {
                    "type": "string",
                    "required": true,
                    "description": "county for the user"
                },
                "phone": {
                    "type": "string",
                    "required": true,
                    "description": "phone number for the user"
                },
                "mobile": {
                    "type": "string",
                    "required": true,
                    "description": "cell / mobile phone for the user"
                },
                "fax": {
                    "type": "string",
                    "required": true,
                    "description": "fax number for the user"
                },
                "license": {
                    "type": "string",
                    "required": true,
                    "description": "user's license number"
                },
                "licensetype": {
                    "type": "string",
                    "required": true,
                    "description": "user's license type"
                },
                "sendSMS": {
                    "type": "boolean",
                    "required": true,
                    "description": "false if the user does not want SMS messages sent"
                },
                "inspector": {
                    "type": "boolean",
                    "required": true,
                    "description": "true if this user is an inspector for this company"
                },
                "owner": {
                    "type": "boolean",
                    "required": true,
                    "description": "true if this user is an owner of the company"
                },
                "marketingstaff": {
                    "type": "boolean",
                    "required": true,
                    "description": "true if this user is a member of the marketing staff"
                },
                "officestaff": {
                    "type": "boolean",
                    "required": true,
                    "description": "true if this user is a member of the office staff"
                },
                "callcenter": {
                    "type": "boolean",
                    "required": true,
                    "description": "true if this user is a member of the callcenter staff"
                },
                "show": {
                    "type": "boolean",
                    "required": true,
                    "description": "false if the user is deleted"
                }
            },
            "id": "ResponseUser"
        }
    }
}
